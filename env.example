# WordPress Configuration
WORDPRESS_DOMAIN=bpkad.bengkaliskab.go.id
WORDPRESS_LOCAL_IP=10.10.10.31
WORDPRESS_TITLE="BPKAD Kabupaten Bengkalis"
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_EMAIL=admin@bpkad.bengkaliskab.go.id

# Database Configuration
MYSQL_DATABASE=wordpress
MYSQL_USER=wpuser
# Passwords are stored in ./secrets/ directory (not in .env for security)

# Timezone
TZ=Asia/Jakarta

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Optional: Remote SFTP Backup
# SFTP_HOST=backup.example.com
# SFTP_PORT=22
# SFTP_USER=backup-user
# SFTP_PASSWORD=
# SFTP_REMOTE_PATH=/backups/bpkad

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# PHP-FPM Pool Configuration (for 4GB RAM server)
# Formula: pm.max_children = (Available RAM - other services) / avg_process_size
# For 4GB server with avg PHP process ~50MB: (4096MB - 1536MB) / 50MB = ~50
PHP_FPM_PM_MAX_CHILDREN=50
PHP_FPM_PM_START_SERVERS=10
PHP_FPM_PM_MIN_SPARE_SERVERS=5
PHP_FPM_PM_MAX_SPARE_SERVERS=15
PHP_FPM_PM_MAX_REQUESTS=500

# For different RAM sizes:
# 2GB RAM: max_children=25, start_servers=5, min_spare=3, max_spare=8
# 8GB RAM: max_children=100, start_servers=20, min_spare=10, max_spare=30
# 16GB RAM: max_children=200, start_servers=40, min_spare=20, max_spare=60

# OPcache Configuration
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_INTERNED_STRINGS_BUFFER=16
OPCACHE_MAX_ACCELERATED_FILES=10000

# MariaDB Configuration
MYSQL_INNODB_BUFFER_POOL_SIZE=512M
MYSQL_MAX_CONNECTIONS=151

