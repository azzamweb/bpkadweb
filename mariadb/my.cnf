# MariaDB Configuration for WordPress
# Optimized for 4GB RAM server

[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4

[mysqld]
# Basic Settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Skip reverse DNS lookup
skip-name-resolve

# Disable symbolic links for security
symbolic-links = 0

# Bind to all interfaces (inside Docker network)
bind-address = 0.0.0.0

# Connection Settings
max_connections = 151
max_connect_errors = 100000
max_allowed_packet = 64M
wait_timeout = 600
interactive_timeout = 600

# Thread and Connection Pool
thread_cache_size = 16
thread_stack = 256K

# ========================================
# Performance Tuning (4GB RAM)
# ========================================

# InnoDB Buffer Pool (most important setting)
# Set to 50-70% of available RAM for database
# For 4GB server with 1GB allocated to DB: 512M-768M
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 1

# InnoDB Log Files
innodb_log_file_size = 128M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# InnoDB I/O Settings
innodb_io_capacity = 200
innodb_io_capacity_max = 400
innodb_read_io_threads = 4
innodb_write_io_threads = 4

# InnoDB File Settings
innodb_file_per_table = 1
innodb_open_files = 400

# Query Cache (disabled in MariaDB 10.6+, but keeping for compatibility)
query_cache_type = 0
query_cache_size = 0

# Table Cache
table_open_cache = 400
table_definition_cache = 400

# Temp Tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Sort and Read Buffer
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
join_buffer_size = 2M

# MyISAM Settings (for system tables)
key_buffer_size = 32M
myisam_sort_buffer_size = 64M

# ========================================
# Binary Logging (for backup and replication)
# ========================================
# Enable binary logs for point-in-time recovery
log_bin = /var/lib/mysql/mysql-bin
binlog_format = MIXED
expire_logs_days = 7
max_binlog_size = 100M
sync_binlog = 1

# ========================================
# Slow Query Log
# ========================================
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow-query.log
long_query_time = 2
log_queries_not_using_indexes = 0

# ========================================
# Error Log
# ========================================
log_error = /var/lib/mysql/error.log
log_warnings = 2

# ========================================
# Security Settings
# ========================================
# Disable local infile for security
local_infile = 0

# Require secure connections for replication (if used)
# require_secure_transport = ON

# SQL Mode (strict but WordPress-compatible)
sql_mode = "STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"

# ========================================
# Optimization for WordPress
# ========================================
# Transaction Isolation
transaction_isolation = READ-COMMITTED

# Disable Performance Schema to save memory (re-enable for debugging)
performance_schema = OFF

[mysqldump]
quick
quote-names
max_allowed_packet = 64M

[mysql]
default-character-set = utf8mb4

[isamchk]
key_buffer_size = 16M

[myisamchk]
key_buffer_size = 16M
sort_buffer_size = 16M
read_buffer = 8M
write_buffer = 8M

[mysqlhotcopy]
interactive-timeout

# ========================================
# RAM Allocation Guide:
# ========================================
# 2GB RAM: innodb_buffer_pool_size=256M, max_connections=100
# 4GB RAM: innodb_buffer_pool_size=512M, max_connections=151 (current)
# 8GB RAM: innodb_buffer_pool_size=1G, max_connections=200
# 16GB RAM: innodb_buffer_pool_size=2G, max_connections=300

